<p><%= flash[:notice] %></p>


<div class="container">
 <div class="row">
  <div class="col-md-3">
    <%= render 'users/userinfo', user: @user, book: @book %>
  </div>
  <div class="offset-md-1">
  </div>

 <div class="col-md-8">
  <h2>Book detail</h2>
   <table class="table">
    <tbody>
     <tr><td> <%= image_tag @user.get_profile_image(100,100) %></td>

      <td><%= link_to @user.name, user_path(@user) %></td>

      <td><%= @book.title %></td>

      <td><%= @book.body %></td>
 

 <% if @book.user == current_user %>
  <td><%= link_to "Edit", edit_book_path(@book) %></td>
  <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
 <% end %>
   </tr>
  </tbody>
 </table>
</div>

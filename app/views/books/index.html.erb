<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container">
 <div class="row">
  <div class="col-md-3">
    <%= render 'users/userinfo', user: @user, book: @book %>
  </div>

  <div class="col-md-8 offset-md-1">
  
    <h2>Books（投稿一覧）</h2>
   <table class="table">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion<th>
     </tr>
   </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
       <%= link_to user_path(book.id) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
       <% end %>
      </td>
      <td><%= link_to book.title, book_path(book) %> </td>
      <td><%= book.body %></td>
  　 <% end %>
  　</tr>
  </tbody>
   </table>
  </div>
 </div>
</div>







<div class="container">
 <div class="row">
  <div class="col-md-3">
    <%= render 'users/userinfo', user: @user, book: @book %>
  </div>
  <div class="offset-md-1">
  </div>
  <div class="col-md-8">
    <h2>Books</h2>
   <table class="table">
    <thead>
     <tr>
      <th></th>  
      <th>Title</th>
      <th>Opinion<th>
     </tr>
   </thead>

  <tbody>
  <% @books.each do |book| %>

<main> 
 <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>Editing Book（投稿編集）</h1>

      <%= form_with model: @book do |f| %>
       <div class="form group">
        <div class="title title"><label for = "title">Title</label></div>
        <div class="title"><%= f.text_field :title %></div>
       </div>
       <div class="form group">
        <div class="body body"><label for = "body">Opinion</label></div>
        <div class="body"><%= f.text_field :body %></div> 
      </div>
  
      <div class="update book">
       <%= f.submit "Update Book", class: "btn btn-success"%>
      </div>
  
       <% end %>
        <span><%= link_to "Show", book_path(@book) %></span>
    |
        <span><%= link_to "Back", books_path %></span>

  </div>
 </div>
</main>
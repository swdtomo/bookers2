<!--ユーザー編集画面-->
<div class="info&new">
 
<h3>User info</h3>
  
  <%= image_tag user.get_profile_image(100,100)  %>
  
  <p>name</p>
  <h3><%= user.name %></h3>
  <p>introduction</p>
  <h3><%= user.introduction %></h3>
  
  <%= link_to edit_user_path(user), class: 'btn btn-block btn-outline-secondary' do %>
  <i class="fa-solid fa-user-gear"></i>
  <% end %>

<h3>New book</h3>
  
 <%= form_with model: book do |f| %>
  <div class="form group">
  <label for="book title">Title</label>
  <div><%= f.text_field :title %></div>
 </div>
 <div class="form group">
  <div><label for="book opinion">Opinion</label></div>
  <div><%= f.text_area :body %></div>
 </div>
 <button type="submit" class="btn btn-success">Create Book</button>
<% end %>
 
</div>
